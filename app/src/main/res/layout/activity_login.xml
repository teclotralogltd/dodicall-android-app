<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <Spinner
        android:id="@+id/lang"
        android:layout_width="80dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        style="@style/AppTheme.Spinner"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:paddingBottom="34dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/password_restore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/password_restore"
            android:gravity="start"
            style="@style/AppTheme.LoginLink"
            />
        <TextView
            android:id="@+id/registration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/registration"
            android:gravity="end"
            style="@style/AppTheme.LoginLink"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/keyboard_hack_wrapper"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        >
        <ImageView
            android:id="@+id/big_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/big_logo"
            android:clickable="true"
            android:paddingBottom="48dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/login_input_bg"
            />
        <LinearLayout
            android:id="@+id/login_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <EditText
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_text_input_height"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:hint="@string/login_hint"
                style="@style/AppTheme.LoginTextInput"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_text_input_height"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:hint="@string/password_hint"
                style="@style/AppTheme.LoginTextInput"
                />
            <TextView
                style="@style/AppTheme.LoginSecondaryText"
                android:id="@+id/login_failure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_secondary_text_height"
                android:visibility="invisible"
                android:textColor="@color/colorAccent"
                tools:text="@string/login_failure"
                tools:visibility="visible"
                />
            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/login_button_bg"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="@string/login_button"
                style="?android:attr/borderlessButtonStyle"
                />
            <TextView
                android:id="@+id/app_version_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_secondary_text_height"
                android:text="@string/app_version_number"
                android:textColor="#999"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="1"
                style="@style/AppTheme.LoginSecondaryText.Text"
                />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </FrameLayout>
</RelativeLayout>
