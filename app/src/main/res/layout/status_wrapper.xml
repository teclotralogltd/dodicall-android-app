<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@id/nav_item_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:drawableEnd="@drawable/ic_chevron_right_wrapper"
        android:drawableRight="@drawable/ic_chevron_right_wrapper"
        android:gravity="center_vertical"
        android:text="@string/nav_drawer_menu_change_status"
        android:textAppearance="@style/AppTheme.NavItem.Title"/>

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:drawableLeft="@drawable/contacts_list_item_status_ic"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/base_user_status_offline"
        android:textAppearance="@style/AppTheme.NavItem.Title"
        android:textSize="14sp"/>
</LinearLayout>
